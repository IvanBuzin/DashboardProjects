                          .search-bar
                            img.search-icon(src="img/search.svg", alt="Search")
                            input(type="text" placeholder="Search" class="search-input")
                          
                          //- Table
                          table#entries-container.customers-table
                            thead
                              tr.hover-table
                                th Customer Name
                                th Company
                                th Phone Number
                                th Email
                                th Country
                                th.status Status
