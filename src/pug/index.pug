doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Dashboard
    link(rel="stylesheet" href="css/main.css")
    link(rel="alternate", href="atom.xml", type="application/atom+xml", title="Atom")
  body
    .dashboard
      //- Sidebar
      aside.side-menu
        .logo
        picture
        img.logotype(src="img/logo.svg", alt="Logo")
        h1.dashboard-header Dashboard
        p.version-info v.01

        nav.menu
          ul.side
            li.menu-item
              img.menu-icon.key(src="img/key.svg", alt="key")
              a.menu-text(href="/dashboard") Dashboard
            li.menu-item
              img.menu-icon(src="img/square.svg", alt="Product")
              a.menu-text(href="/product") Product
              img.chevron-right(src="img/right.svg", alt="Product")
            li.menu-item.active
              img.menu-icon(src="img/user.svg", alt="Customers")
              a.menu-item-active(href="/customers") Customers
              img.side-right-active(src="img/active.svg", alt="Product")
            li.menu-item
              img.menu-icon(src="img/money.svg", alt="Income")
              a.menu-text(href="/income") Income
              img.chevron-right(src="img/right.svg", alt="Product")
            li.menu-item
              img.menu-icon(src="img/discount.svg", alt="Promote")
              a.menu-text(href="/promote") Promote
              img.chevron-right(src="img/right.svg", alt="Product")
            li.menu-item
              img.menu-icon(src="img/message.svg", alt="Message")
              a.menu-text(href="/help") Help
              img.chevron-right(src="img/right.svg", alt="Product")

    .profile-group
      img.profile-image(src="img/photo.svg", alt="User Image")
      .profile-info
        span.name Evano
        small.role Project Manager

      //- Main Content
    main.content
      
      h1.heder-info Hello Evano üëã
      
      .customers
        h2.customers-info All Customers
        a#filter-active(href="#" role="button" class="active-content") Active Members
                          //- Search Input
                          .search-bar
                            img.search-icon(src="img/search.svg", alt="Search")
                            input#search-input(type="text" placeholder="Search" class="search-input")
                          
                          //- Table
                          table#entries-container.customers-table
                            thead
                              tr.hover-table
                                th.name Customer Name
                                th.company Company
                                th.number Phone Number
                                th.email Email
                                th.country Country
                                th.statuse Status
                            tbody
                              each entry in entries
                                tr.content-table
                                  td.name= entry.CustomerName
                                  td.company= entry.Company
                                  td.number= entry.PhoneNumber
                                  td.email= entry.Email
                                  td.country= entry.Country
                                  td.status(class=`status-${entry.Status.toLowerCase()}`)= entry.Status
                                                                       
        //- Pagination                                                              
        .pagination
  #pagination-info.pagination-text Showing data 1 to 8 of 256K entries
  img#prev-page.left-active(src="img/l.svg", alt="Previous page") 
  ul#pagination-list.pagination-list(aria-label="Pagination")
